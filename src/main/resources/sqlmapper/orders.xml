<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.OrdersMapper">
    <resultMap id="result" type="OrdersDTO">
        <result property="id" column="id"/>
        <result property="regdate" column="regdate"/>
        <result property="details" column="details"/>
        <result property="price" column="price"/>
        <result property="comment" column="comment"/>
        <result property="status" column="status"/>
        <result property="menu_id" column="menu_id"/>
        <result property="store_id" column="store_id"/>
        <result property="user_pk" column="user_pk"/>
    </resultMap>

    <insert id="insertOrders" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO orders (status, regdate, details, price, comment, menu_id, store_id, user_pk)
        VALUES (#{status}, #{regdate}, #{details}, #{price}, #{comment}, #{menu_id}, #{store_id}, #{user_pk})
    </insert>

    <update id="updateForInsert">
        UPDATE menu
        SET stock = stock - 1
        WHERE id=#{menu_id}
    </update>

    <select id="selectAllWithStore_id" resultMap="result">
        SELECT *
        FROM orders
        WHERE store_id=#{store_id}
    </select>

    <select id="selectAllWithUser_pk" resultMap="result">
        SELECT *
        FROM orders
        WHERE user_pk=#{user_pk}
    </select>

    <select id="selectAllEndedWithUser_pk" resultMap="result">
        SELECT *
        FROM orders
        WHERE user_pk=#{user_pk}
          AND status > '1'
    </select>

    <select id="selectOneWithId" resultMap="result">
        SELECT *
        FROM orders
        WHERE id=#{id}
    </select>

    <update id="updateStatus">
        UPDATE orders
        SET status=#{status}
        WHERE id=#{id}
    </update>
</mapper>